# ============================================
# ADAS MCP Toolbox Builder - Configuration
# ============================================
# Copy this file to .env and fill in your values

# === Ports ===
FRONTEND_PORT=3312
BACKEND_PORT=4311

# === LLM Configuration ===
# Provider: anthropic | openai
LLM_PROVIDER=anthropic

# Anthropic (Claude) - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo

# === Persistence ===
# Path to store projects (will be mounted as /memory in container)
MEMORY_PATH=./memory

# === App Settings ===
NODE_ENV=development
LOG_LEVEL=debug
# Options: debug, info, warn, error

# === CORE Connection (for actor/identity management) ===
# URL to CORE's MCP server (use host.docker.internal when running in Docker)
CORE_MCP_URL=http://host.docker.internal:4310/mcp
# Shared secret for authentication (must match CORE's MCP_SHARED_SECRET)
CORE_MCP_SECRET=
