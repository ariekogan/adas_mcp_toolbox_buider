  "bootstrap_tools": [
    "calendar.availability.check",
    "calendar.event.list",
    "calendar.event.create"
  ],
  "policy": {
    "guardrails": {
      "never": [
        "Book meetings in the past",
        "Delete events without user confirmation",
        "Access another user's calendar without their email",
        "Reveal internal event IDs to the user"
      ],
      "always": [
        "Confirm meeting details before booking",
        "Show a summary after any calendar change",
        "Ask for clarification if date/time is ambiguous"
      ]
    },
    "workflows": [
      {
        "id": "check_availability_flow",
        "name": "Check Availability",
        "trigger": "check_availability",
        "steps": [
          "calendar.availability.check",
          "sys.emitUserMessage"
        ],
        "required": false,
        "on_deviation": "warn",
        "steps_resolved": [
          true,
          true
        ]
      },
      {
        "id": "book_meeting_flow",
        "name": "Book Meeting",
        "trigger": "book_meeting",
        "steps": [
          "calendar.availability.check",
          "sys.askUser",
          "calendar.event.create",
          "sys.emitUserMessage"
        ],
        "required": true,
        "on_deviation": "warn",
        "steps_resolved": [
          true,
          true,
          true,
          true
        ]
      },
      {
        "id": "reschedule_flow",
        "name": "Reschedule",
        "trigger": "reschedule_meeting",
        "steps": [
          "calendar.event.list",
          "calendar.availability.check",
          "sys.askUser",
          "calendar.event.update",
          "sys.emitUserMessage"
        ],
        "required": true,
        "on_deviation": "warn",
        "steps_resolved": [
          true,
          true,
          true,
          true,
          true
        ]
      },
      {
        "id": "cancel_flow",
        "name": "Cancel Meeting",
        "trigger": "cancel_meeting",
        "steps": [
          "calendar.event.list",
          "sys.askUser",
          "calendar.event.delete",
          "sys.emitUserMessage"
        ],
        "required": true,
        "on_deviation": "warn",
        "steps_resolved": [
          true,
          true,
          true,
          true
        ]
      }
    ],
    "approvals": [
      {
        "id": "approval-delete",
        "tool_id": "tool-gcal-delete",
        "conditions": [
          {
            "when": "always",
            "action": "require_approval"
          }
        ],
        "approver": "user",
        "tool_id_resolved": true
      }
    ]
  },
  "engine": {
    "model": "claude-sonnet-4-20250514",
    "temperature": 0.3,
    "rv2": {
      "max_iterations": 10,
      "iteration_timeout_ms": 30000,
      "allow_parallel_tools": false,
      "on_max_iterations": "ask_user"
    },
    "hlr": {
      "enabled": true,
      "critic": {
        "enabled": false,
        "strictness": "medium"
      },
      "reflection": {
        "enabled": false,
        "depth": "shallow"
      }
    },
    "autonomy": {
      "level": "autonomous"
    }
  },
  "access_policy": {
    "rules": [
      {
        "tools": [
          "calendar.event.list",
          "calendar.availability.check"
        ],
        "effect": "allow",
        "requires_grants": [
          "sched.user_id"
        ]
      },
      {
        "tools": [
          "calendar.event.create",
          "calendar.event.update",
          "calendar.event.delete"
        ],
        "effect": "constrain",
        "requires_grants": [
          "sched.user_id"
        ],
        "inject": {
          "organizer_id": "${grants.sched.user_id}"
        }
      }
    ]
  },
